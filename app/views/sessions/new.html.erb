<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <div>
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password %>
  </div>
  
  <%= f.submit 'ログイン' %>
<% end %>

<%= link_to 'ユーザーの新規登録', new_user_path %>