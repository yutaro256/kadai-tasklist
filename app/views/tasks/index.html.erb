<h1>タスク一覧</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task_path(task) %> : <%= task.user.name %> => <%= task.status %>, <%= task.content%></li>
  <% end %>
</ul>

<%= paginate @tasks %>

<%= link_to "タスクの新規作成", new_task_path %>
<%= link_to 'ログアウト', logout_path, method: :delete %>